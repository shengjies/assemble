<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sj.login.mapper.UserMapper">
    <!--用户登录-->
    <select id="login" resultType="com.sj.login.domain.User">
        SELECT * FROM jg.tab_user where username = #{username} and pwd =#{pwd} limit 1;
    </select>

    <!---->
    <select id="findByUserName" resultType="com.sj.login.domain.User">
        SELECT * FROM jg.tab_user where username = #{username}  limit 1;
    </select>
</mapper>